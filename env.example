# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_super_secret_key_here_change_this

# PostgreSQL Database Configuration
# Option 1: Use DATABASE_URL (Recommended for Render)
# Render provides DATABASE_URL automatically, format:
# DATABASE_URL=postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://postgres:password@localhost:5432/student_card_db

# Option 2: Use individual variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=student_card_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# For Render PostgreSQL deployment:
# Render automatically sets DATABASE_URL environment variable
# You don't need to set individual DB_* variables if DATABASE_URL is set

# Email Configuration (Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=umpdigitalc@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here
MAIL_DEFAULT_SENDER=umpdigitalc@gmail.com
SUPPORT_RECIPIENT=umpdigitalc@gmail.com

